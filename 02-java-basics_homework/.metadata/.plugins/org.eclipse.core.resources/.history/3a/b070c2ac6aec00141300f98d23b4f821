import java.util.Scanner;

public class Problem7 {
	
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in, "UTF-8");

        System.out.println("Please enter an integer: ");
        int num = input.nextLine();

        boolean result = (num % 5 == 0) && (num % 7 == 0);
        System.out.println(num + " is devisible by 5 & 7: " + result);
        
        /*
        boolean five = num % 5 != 1;
        System.out.println(num + " is devisible by 5: " + five);
        
        
        boolean seven = num % 7 != 1;
        System.out.println(num + " is devisible by 7: " + seven);
        */
    }
}
