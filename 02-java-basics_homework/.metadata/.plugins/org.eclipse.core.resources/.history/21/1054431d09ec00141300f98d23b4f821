import java.util.Scanner;

public class Problem1 {

    public static void main(String[] args) {
        System.out.println("Area of a rectangle");
        Scanner input = new Scanner(System.in, "UTF-8");

        System.out.println("Please, enter the legth of the rectangle (a, in cm): ");
        float length = input.nextFloat();
        
        System.out.println("Please, enter the width of the rectangle (b, in cm): ");
        float width = input.nextFloat();
        
        float square = length * width;
        System.out.println("The area of a rectangle with length a = " + length + " cm" + "and width b = " + " cm" +  " is: " + square + " cm2");
        
