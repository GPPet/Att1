import java.util.Scanner;

public class Problem1 {
// Caculating the area of a rectangle
    public static void main(String[] args) {
        System.out.println("Area of a rectangle");
        Scanner input = new Scanner(System.in, "UTF-8");

        System.out.println("Please, enter the height of the rectangle (a, in cm): ");
        float height = input.nextFloat();
        
        System.out.println("Please, enter the width of the rectangle (b, in cm): ");
        float width = input.nextFloat();
        
        float square = height * width;
        System.out.println("The area of a rectangle with length a = " + height + " cm" + " and width b = " +
        width + " cm" +  " is: " + square + " cm2");
                
    }
}