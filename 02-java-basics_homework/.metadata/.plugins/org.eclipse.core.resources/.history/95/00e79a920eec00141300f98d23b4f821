public class Problem2 {

    public static void main(String[] args) {
// Swapping two numbers, No1
    	int valueA = 1;
        int valueB = 3;
        System.out.println("Initail values of A and B are " + valueA + " and " + valueB + ", respectively.");
        
        valueA = valueA + valueB;
        valueB = valueA - valueB;
        valueA = valueA - valueB;
        System.out.println("Values of A and B after swapping are " + valueA + " and " + valueB + ", respectively.");

// Swapping two numbers, No2
        int valueC = 1;
        int valueD = 3;
        System.out.println("Initail values of C and D are " + valueC + " and " + valueD + ", respectively.");
                
        int tmp = valueC;
        valueC = valueD;
        valueD = tmp;		
        System.out.println("Values of C and D after swapping are " + valueC + " and " + valueD + ", respectively.");
                
    }
}
